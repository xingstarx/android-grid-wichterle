<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:padding="@dimen/grid2"
		android:src="@drawable/ic_gridwichterle"/>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_centerVertical="true"
		android:paddingLeft="2dp"
		android:layout_toLeftOf="@+id/btnSettings"
		android:layout_toRightOf="@+id/icon">

		<TextView
			android:id="@+id/txtTitle"
			style="@style/NotificationText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/notification_title" />

		<TextView
			android:id="@+id/txtDesc"
			style="@style/NotificationTextDesc"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/notification_desc" />
	</LinearLayout>


	<ImageButton
		android:id="@+id/btnSettings"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_margin="@dimen/grid1"
		android:src="@drawable/ic_close"
		android:layout_alignParentRight="true" />


</RelativeLayout>